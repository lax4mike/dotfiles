# @gf3’s Sexy Bash Prompt, inspired by “Extravagant Zsh Prompt”
# Shamelessly copied from https://github.com/gf3/dotfiles

default_username='mlambert'

if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
	export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
	export TERM=xterm-256color
fi


# colors: 
# ( x=`tput op` y=`printf %$((${COLUMNS}-6))s`;for i in {0..256};do o=00$i;echo -e ${o:${#o}-3:3} `tput setaf $i;tput setab $i`${y// /=}$x;done; )

if tput setaf 1 &> /dev/null; then
	tput sgr0

	ORANGE=$(tput setaf 172)
	PURPLE=$(tput setaf 141)
	MAROON=$(tput setaf 88)
	RED=$(tput setaf 9)
	GREEN=$(tput setaf 34)
	YELLOW=$(tput setaf 11)
	BLUE=$(tput setaf 69)
	MAGENTA=$(tput setaf 5)
	CYAN=$(tput setaf 6)
	WHITE=$(tput setaf 7)
	GREY=$(tput setaf 8)

	PREPOSITION=$GREY

	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	MAGENTA="\033[1;31m"
	ORANGE="\033[1;33m"
	GREEN="\033[1;32m"
	PURPLE="\033[1;35m"
	WHITE="\033[1;37m"
	BLUE="\033[1;34m"
	BOLD=""
	RESET="\033[m"
fi

# Fastest possible way to check if repo is dirty. a savior for the WebKit repo.
function parse_git_dirty() {
   git diff --quiet --ignore-submodules HEAD 2>/dev/null; [ $? -eq 1 ] && echo '*'
}

function parse_git_branch() {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}



# iTerm Tab and Title Customization and prompt customization
# http://sage.ucsc.edu/xtal/iterm_tab_customization.html

# Only show username/host if not default
function usernamehost() {
	if [ $USER != $default_username ]; then echo "${PREPOSITION}| ${RED}\u ${PREPOSITION}at ${ORANGE}\h "; fi
}


function parse_git_dirty() {
	[[ $(git status 2> /dev/null | tail -n1) != *"working directory clean"* ]] && echo "*"
}

function parse_git_branch() {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\1$(parse_git_dirty)/"
}

function gitbranch() {
	echo "${PREPOSITION}\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" on \")${PURPLE}\$(parse_git_branch)${PREPOSITION}"
}

PS1="${BOLD}\n${BLUE}\t $(usernamehost)${PREPOSITION}in ${YELLOW}\w${PREPOSITION}$(gitbranch)${WHITE}\n\$ ${RESET}"
